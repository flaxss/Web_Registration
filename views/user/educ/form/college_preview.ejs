<%- include('../../include/header') %>
    <title>Preview</title>
    <link rel="stylesheet" href="/css/educ-temp.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
    <script>
        window.onload = function () {
            document.getElementById("download")
            .addEventListener("click", () => {
                const invoice = this.document.getElementById("pdf-form");
                console.log(invoice);
                console.log(window);
                var opt = {
                    margin: -0.029,
                    filename: `${new Date().getFullYear()}${new Date().getMonth() + 1}${new Date().getDate()}${new Date().getMilliseconds()}.pdf`,
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'in', format: 'A4', orientation: 'portrait' }
                };
                html2pdf().from(invoice).set(opt).save();
            })
        }
    </script>
</head>
<body>
    <%- include('../../include/nav') %>
    <div class="container">
        <div class="alert alert-success mt-2" role="alert">
            <h1>Congrats! <img src="/img/vector_confetti.png" alt="" style="width: 10%;"></h1>
            <h2><%- find.firstname %> <%- find.middlename %> <%- find.lastname %></h2>
            <span>Registered kana sa <%- find.service %>, maaari mo ng i-Download ang iyong Intake Sheet</span>
        </div>
        <div style="text-align: center;">
            <button id="download" class="btn btn-primary mb-2 px-3" style="letter-spacing: 2px;">Download</button>
        </div>
        <form action="" class="page" size="A4" id="pdf-form">
            <div style="margin: 2%; border: 2px solid #000 ">
