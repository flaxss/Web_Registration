                                    <input type="checkbox" id="sem_3rd" class="ms-3" disabled> 3rd
                                </div>
                                <script>
                                    let sem = '<%- find.sem %>'
                                    if(sem == '1st'){
                                        document.getElementById('sem_1st').checked = true
                                    }else if(sem == '2nd'){
                                        document.getElementById('sem_2nd').checked = true
                                    }else if(sem == '3rd'){
                                        document.getElementById('sem_3rd').checked = true
                                    }
                                </script>
                            </div>
                        </td>
                    </tr>
                </table>
