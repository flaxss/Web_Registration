<%- include('include/head') %> 
    <title>Application</title>
</head>
<body>
    <main class="main">
        <%- include('include/nav_link') %> 
        <div class="main-content">
            <div class="content-table">
                <%- include('include/application_search') %>
                <div class="table-responsive">
                    <!-- <span class="col-md-2 bg-light text-center nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Create Application</span>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="/a/application/college/form">College Educational Assistance</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/a/application/medical/form">Medical Assistance</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/a/application/burial/form">Burial Assistance</a>
                        </li>
                        <li>
